<div class="background-color">
  <div class="items-center">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }, class: "centering") do |f| %>
      <div class="form-inputs centering">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions items-center centering">
        <%= f.button :submit, "Log in", class: "button-form" %>
      </div>
    <% end %>
  </div>
  <div class="centering">
    <%= render "devise/shared/links" %>
  </div>
</div>
