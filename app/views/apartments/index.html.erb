<div class="centering beige-background">
  <div>
  <h3>This month expenses: </h3>
  <%= line_chart Apartment.where('date_of_purchase BETWEEN ? AND ?', @beginning_of_month, @end_of_month).group_by_day(:date_of_purchase).sum(:amount) %>
  </div>
  <div class="page-in-two">
    <div>
      <h3 class="header2">Add a new expense 💸</h3>
      <div id="new_apartment">
        <%= render partial: "form", locals: {apartment: Apartment.new} %>
      </div>
    </div>
    <div>
      <h3 class="header2">🗒️ Your last expenses: </h3>
      <div id="apartments">
        <%= render partial: "apartment", locals: { apartments: @apartments } %>
      </div>
    </div>
  </div>
  <%= link_to "Filter your expenses", filter_apartments_path, class: 'btn button-form' %>
</div>
