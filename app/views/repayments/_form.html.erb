<div class="wrapper">
  <%= simple_form_for repayment do |f| %>
    <%= f.input :category, collection: Repayment::CATEGORY, wrapper_html: {class: 'items-next'}, required: true %>
    <%= f.input :date_of_transaction, as: :date, html5: true, wrapper_html: {class: 'items-next'}, required: true %>
    <%= f.input :amount, placeholder: 'in euro', wrapper_html: {class: 'items-next'}, required: true %>
    <%= f.input :lender, wrapper_html: {class: 'items-next'} %>
    <%= f.input :description, wrapper_html: {class: 'items-next'} %>
    <%= f.button :submit, 'Add expense', class: 'button-form' %>
  <% end %>
</div>
