<div class="centering background-color">
<h3>Add a new expense ðŸ’¸</h3>
  <div class="wrapper">
  <%= simple_form_for @repayment do |f| %>
    <%= f.input :category, collection: Repayment::CATEGORY, wrapper_html: {class: 'items-next'} %>
    <%= f.input :date_of_transaction, as: :date, html5: true, wrapper_html: {class: 'items-next'} %>
    <%= f.input :amount, placeholder: 'in euro', wrapper_html: {class: 'items-next'} %>
    <%= f.input :lender, wrapper_html: {class: 'items-next'} %>
    <%= f.input :description, wrapper_html: {class: 'items-next'} %>
    <%= f.button :submit, 'Add expense', class: 'button-form' %>
  <% end %>
  </div>
</div>
<p>This is the cost:  </p>
  <ul>
    <% @repayments.each do |repayment| %>
    <li><%= repayment.amount %></li>
    <% end %>
  </ul>
