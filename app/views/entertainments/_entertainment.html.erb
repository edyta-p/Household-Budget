  <div class="grid-container-small">
    <% @entertainments.each do |entertainment| %>
      <div class="card-display" data-controller="search-cards">
        <h5 class='nice-font'><%= entertainment.category %></h5>
        <p>Amount: <%= entertainment.amount %> <%= entertainment.currency %></p>
