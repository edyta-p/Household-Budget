        <p  class="d-none left-align" data-search-cards-target="date">Date: <%= entertainment.date_of_purchase.to_date %></p>
        <p class="d-none left-align" data-search-cards-target="shop">Shop name: <%= entertainment.shop_name %></p>
        <p class="d-none left-align" data-search-cards-target="descr">Desc: <%= entertainment.description %></p>
      </div>
    <% end %>
  </div>
